@model WebApplication1.Models.DTO.AddFileModel

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Dodaj dokument</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Dokumenty</a></li>
                        <li class="breadcrumb-item active">Dodaj dokument</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">         
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Dane</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body" style="display: block;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="IdDocType" class="control-label"></label>
                                <select asp-for="IdDocType" class="form-control" asp-items="ViewBag.IdDocType"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Path" class="control-label"></label>                                
                                <div class="input-group">
                                    <div class="custom-file">                                    
                                    <input type="file" asp-for="Path" class="custom-file-input form-control" />
                                    <label class="custom-file-label" for="exampleInputFile">Wybierz plik</label>
                                    </div>                                    
                                </div>
                                <span asp-validation-for="Path" class="text-danger"></span>
                            </div>
            
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdCampaign" class="control-label"></label>
                                <select asp-for="IdCampaign" class="form-control" asp-items="ViewBag.IdCampaign"></select>
                            </div>                                                                                
                        </div>
                        <div class="card-footer">
                            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                            <input type="submit" value="Dodaj" class="btn btn-primary float-right" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
