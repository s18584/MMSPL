@model IEnumerable<WebApplication1.models.databasemodels.Customer>

@{
    ViewData["Title"] = "Send";
}

<h1>View</h1>

<p>Wysyłka nastąpi do poniższych klientów:</p>

<form asp-action="Send" asp-route-id="@ViewData["RouteId"]">

    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" /> |
        
    </div>

<table class="dataTable">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td><input name="customerId" value="@item.Id" id="@item.Id" /></td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>           
        </tr>
}
    </tbody>
</table>

<a>Potwierdź wysyłkę</a>
</form>