@using WebApplication1.Helpers

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        <img src="~/admin/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">MMSPL v1.0</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@Html.ViewContext.HttpContext.User.Identity.Name</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                <li class="nav-item has-treeview ">
                    <a href="#" class="nav-link">
                        <i class="fas fa-user-circle nav-icon"></i>
                        <p>
                            Administracja
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UserManagement" asp-action="ShowAllUsers">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Użytkownicy</p>
                            </a>
                        </li>

                        @*<li class="nav-item">
                            <a class="nav-link" asp-controller="UserManagement" asp-action="ShowAllRoles">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Role</p>
                            </a>
                        </li>*@

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DocTypes" asp-action="Index">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Typy Dokumentów</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CostTypes" asp-action="Index">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Rodzaje kosztów</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SendingActionTypes" asp-action="Index">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Rodzaje wysyłek</p>
                            </a>
                        </li>

                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Contractors" asp-action="Index">
                        <i class="far fa-building nav-icon"></i>
                        <p>Kontrahenci</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Campaigns" asp-action="Index">
                        <i class="fas fa-bullhorn nav-icon"></i>
                        <p>Kampanie</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Index">
                        <i class="fas fa-users nav-icon"></i>
                        <p>Klienci</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Costs" asp-action="Index">
                        <i class="fas fa-file-invoice-dollar nav-icon"></i>
                        <p>Koszty</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Promocodes" asp-action="Index">
                        <i class="fas fa-percent nav-icon"></i>
                        <p>Kody promocyjne</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="SendingActions" asp-action="Index">
                        <i class="far fa-paper-plane nav-icon"></i>
                        <p>Wysyłki</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Documents" asp-action="Index">
                        <i class="far fa-folder-open nav-icon"></i>
                        <p>Dokumenty</p>
                    </a>
                </li>
                </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

