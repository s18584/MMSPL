@model WebApplication1.models.databasemodels.Campaign

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Szczegóły kampanii</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Kampanie</a></li>
                    <li class="breadcrumb-item active">Szczegóły kampanii</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header d-flex p-0">
                        <h3 class="card-title p-3">
                            <i class="fas fa-info-circle"></i>
                           Informacje
                        </h3>
                        <div class="card-tools ml-auto p-2 pr-4">                            
                            <div class="btn-group text-right">
                                <a href="javascript:history.go(-1)" class="btn btn-default">
                                    <i class="fas fa-arrow-alt-circle-left"></i>
                                    Powrót
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">
                                    <i class="fas fa-edit"></i>
                                    Edytuj
                                </a>
                               
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown">
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                         <a asp-controller="SendingActions" asp-action="Create" asp-route-campid="@Model.Id" class="dropdown-item">
                                            <i class="fas fa-paper-plane"></i>
                                            Stwórz szablon wysyłki
                                        </a>
                                        <a asp-action="AddCustomers" asp-route-id="@Model.Id" class="dropdown-item">
                                            <i class="fas fa-user-plus"></i>
                                            Dodaj klientów
                                        </a>
                                        <a asp-controller="Documents" asp-action="Create" asp-route-id="@Model.Id" class="dropdown-item">
                                            <i class="fas fa-folder-open"></i>
                                            Dodaj dokument
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>                      
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 ">
                                <h3 class="text-primary">
                                    <i class="fas fa-ad"></i>                                    
                                    @Html.DisplayFor(model => model.Name)
                                </h3>
                                <p class="text-muted">@Html.DisplayFor(model => model.Description)</p>
                                <br>
                                <div class="text-muted">
                                    <p class="text-sm">@Html.DisplayNameFor(model => model.IdContractorNavigation.Name)
                                        <b class="d-block">
                                            <a asp-controller="Contractors" asp-action="Details" asp-route-id="@Model.IdContractorNavigation.Id">
                                                <i class="fas fa-globe"></i>
                                                @Html.DisplayFor(model => model.IdContractorNavigation.Name)
                                            </a>
                                        </b>
                                    </p>    
                                    <p class="text-sm">@Html.DisplayNameFor(model => model.Budget)
                                        <b class="d-block">                                            
                                            <i class="fas fa-hand-holding-usd"></i>
                                            @Html.DisplayFor(model => model.Budget)                                            
                                        </b>
                                    </p> 
                                                                        
                                </div>    
                            </div>
                            <div class="col-md-3 ">
                                <div>
                                      <canvas id="myChart"></canvas>
                                    </div>
                                    <script>
                                      const ctx = document.getElementById('myChart');

                                      var jsondata = @Html.Raw(Json.Serialize(ViewData["data"]));

                                      var labels = jsondata.map(function(e) {
                                        return e.key;
                                      });
                                      var data = jsondata.map(function(e) {
                                        return e.value;
                                      });
                                      console.log(labels);
                                      console.log(data);
                                      
                                      new Chart(ctx, {
                                        type: 'doughnut',
                                        data: {
                                            labels: labels,
                                            datasets: [{
                                                
                                                data: data    //[{id: 'Sales', nested: {value: 1500}}, {id: 'Purchases', nested: {value: 500}}]
                                            }]
                                        },
                                        options: {
                                            
                                            parsing: {
                                               
                                            },
                                            plugins: {
                                                title: {
                                                    display: true,
                                                    text: 'Rozkład kosztów'
                                                },
                                                legend: {
                                                  position: "bottom",
                                                  display: true,
                                                }
                                            }
                                        }
                                      });
                                    </script>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="height:580px;">
                    <div class="card-header p-2">
                        
                        <ul class="nav nav-pills ">
                            <li class="nav-item">
                                <a class="nav-link active" href="#tab_1" data-toggle="tab">
                                    <i class="fas fa-users nav-icon"></i>
                                    Dodani klienci
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#tab_2" data-toggle="tab">
                                    <i class="far fa-paper-plane nav-icon"></i>
                                    Szablony wysyłek
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#tab_3" data-toggle="tab">
                                    <i class="far fa-folder-open nav-icon"></i>
                                    Dokumenty
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#tab_4" data-toggle="tab">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                    Koszty
                                </a>
                            </li>
                        </ul>                        
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1">
                                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">                        
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="dataTable" class="table table-bordered table-striped dataTable dtr-inline">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1"> 
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].IdCustomerNavigation.FirstName)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].IdCustomerNavigation.LastName)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].IdCustomerNavigation.Email)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].OkToEmail)
                                                        </th>    
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].OkToThirdParty)
                                                        </th> 
                                                        <th class="sorting col-md-3" id="actionColumn">
                                                            Akcje
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.CustomerCampaigns) {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdCustomerNavigation.FirstName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdCustomerNavigation.LastName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdCustomerNavigation.Email)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.OkToEmailText)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.OkToThirdPartyText)
                                                            </td>
                                                            <td class="text-center" id="actionColumn">                                                                                                                                   
                                                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.IdCustomer" class="btn btn-primary btn-sm">
                                                                    <i class="fas fa-info-circle"></i>
                                                                    Szczegóły
                                                                </a>
                                                                <a asp-controller="CustomerCampaign" asp-action="Edit" asp-route-campid="@Model.Id" asp-route-cmid="@item.IdCustomer" class="btn btn-info btn-sm">
                                                                    <i class="fas fa-pencil-alt"></i>
                                                                    Edytuj zgody
                                                                </a>
                                                                <a asp-controller="CustomerCampaign" asp-action="Delete" asp-route-campid="@Model.Id" asp-route-cmid="@item.IdCustomer" class="btn btn-danger btn-sm">
                                                                    <i class="fas fa-user-minus"></i>
                                                                    Odłącz
                                                                </a>                                                                                                                       
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab_2">
                                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">                        
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="dataTable1" class="table table-bordered table-striped dataTable dtr-inline">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1"> 
                                                            @Html.DisplayNameFor(model => model.SendingActions.ToList()[0].Name)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.SendingActions.ToList()[0].Description)
                                                        </th>
                                                         <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.SendingActions.ToList()[0].EmailSubject)
                                                        </th>  
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.SendingActions.ToList()[0].IdSendingActionTypeNavigation.Name)
                                                        </th>
                                                        <th class="sorting" id="actionColumn">
                                                            Akcje
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.SendingActions) {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Description)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.EmailSubject)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdSendingActionTypeNavigation.Name)
                                                            </td>
                                                            
                                                            <td class="text-center col-md-3" id="actionColumn">                                                                                                                                   
                                                                <a asp-controller="SendingActions" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                                                    <i class="fas fa-info-circle"></i>
                                                                    Szczegóły
                                                                </a>
                                                                <a asp-controller="SendingActions" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                                    <i class="fas fa-pencil-alt"></i>
                                                                    Edytuj
                                                                </a>
                                                                <a asp-controller="SendingActions" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                                    <i class="fas fa-trash"></i>
                                                                    Usuń
                                                                </a>                                                                                                                       
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab_3">
                                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">                        
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="dataTable2" class="table table-bordered table-striped dataTable dtr-inline">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1"> 
                                                            @Html.DisplayNameFor(model => model.Documents.ToList()[0].IdDocTypeNavigation.Name)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.Documents.ToList()[0].Path)
                                                        </th>
                                                        <th class="sorting col-md-2" id="actionColumn">
                                                            Akcje
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.Documents) {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdDocTypeNavigation.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Path)
                                                            </td>
                                                            <td class="dt-center" id="actionColumn">
                                                                <div class="btn-group">
                                                                    <a asp-controller="SendingAction" asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-default">Edytuj</a>
                                                                    <a asp-controller="SendingAction" asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-default">Szczegóły</a>
                                                                    <a asp-controller="SendingAction" asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-default">Usuń</a>
                                                                </div>                                                         
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab_4">
                                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">                        
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="dataTable4" class="table table-bordered table-striped dataTable dtr-inline">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1"> 
                                                            @Html.DisplayNameFor(model => model.Costs.ToList()[0].IdContractorNavigation.Name)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.Costs.ToList()[0].IdCostTypeNavigation.Name)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.Costs.ToList()[0].Amount)
                                                        </th>
                                                        <th class="sorting col-md-2" id="actionColumn">
                                                            Akcje
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.Costs) {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdContractorNavigation.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdCostTypeNavigation.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Amount)
                                                            </td>
                                                            <td class="text-center col-md-3" id="actionColumn"> 
                                                                <a asp-controller="Costs" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                                    <i class="fas fa-pencil-alt"></i>
                                                                    Edytuj
                                                                </a>
                                                                <a asp-controller="Costs" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                                    <i class="fas fa-trash"></i>
                                                                    Usuń
                                                                </a>                                                                                                                       
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    
}