@model WebApplication1.models.databasemodels.Campaign

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>  

    <h1>Szczegóły kampanii</h1>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdContractorNavigation.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdContractorNavigation.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-controller="SendingActions" asp-action="Create" asp-route-campid="@Model.Id">Zaplanuj wysyłkę</a> |
    <a asp-action="AddCustomers" asp-route-id="@Model.Id">Dodaj klientów</a> 
</div>
<hr />
<h2>Dodani klienci</h2>

<table class="table table-hover text-nowrap" id="AllCustomersTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].IdCustomerNavigation.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].IdCustomerNavigation.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].OkToEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].OkToThirdParty)
            </th>
            <th>
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CustomerCampaigns) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCustomerNavigation.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCustomerNavigation.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OkToEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OkToThirdParty)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                <a asp-controller="CustomerCampaign" asp-action="Delete" asp-route-campid="@Model.Id" asp-route-cmid="@item.IdCustomer">Usuń</a> 
            </td>
        </tr>
}
    </tbody>
</table>