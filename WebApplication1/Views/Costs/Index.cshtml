@model IEnumerable<WebApplication1.models.databasemodels.Cost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="CostModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="document" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="CostModalContent">

        </div>
    </div>
</div>

<p>
    <button type="button" data-target="#login_for_review" class="btn btn-secondary" id="CreateCost">Dodaj koszt</button>
    <button type="button" data-target="#login_for_review" class="btn btn-secondary" id="EditCost">Edytuj</button>
</p>
<table class="table table-hover text-nowrap" id="AllDocTypesTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCampaignNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdContractorNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCostTypeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCampaignNavigation.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdContractorNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCostTypeNavigation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
