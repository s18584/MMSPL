@model WebApplication1.models.databasemodels.Customer

@{
    ViewData["Title"] = "Details";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Szczegóły klienta</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Klienci</a></li>
                    <li class="breadcrumb-item active">Szczegóły klienta</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header d-flex p-0">
                        <h3 class="card-title p-3">
                            <i class="fas fa-info-circle"></i>
                           Informacje
                        </h3>
                        <div class="card-tools ml-auto p-2 pr-4">                            
                            <div class="btn-group text-right">
                                <a href="javascript:history.go(-1)" class="btn btn-default">
                                    <i class="fas fa-arrow-alt-circle-left"></i>
                                    Powrót
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">
                                    <i class="fas fa-edit"></i>
                                    Edytuj
                                </a>
                               
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown">
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a  class="dropdown-item">
                                            
                                            Dodaj do kampanii
                                        </a>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>                      
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
                                <h3 class="text-primary">
                                    <i class="fas fa-user"></i>                                    
                                    @Html.DisplayFor(model => model.FullName)
                                </h3>
                                <p class="text-muted">@Html.DisplayFor(model => model.Email)</p>
                                
                                <div class="text-muted">
                                    <p class="text-sm">@Html.DisplayNameFor(model => model.FullAddress)
                                        <b class="d-block">                                            
                                            <i class="fas fa-map-marker-alt"></i>
                                            @Html.DisplayFor(model => model.FullAddress)
                                        </b>
                                    </p>
                                    <p class="text-sm">@Html.DisplayNameFor(model => model.BirthDate)
                                        <b class="d-block">                                            
                                            <i class="fas fa-birthday-cake"></i>
                                            @Html.DisplayFor(model => model.BirthDate)
                                        </b>
                                    </p>
                                </div>                                 
                            </div>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="height:580px;">
                    <div class="card-header p-2">
                        
                        <ul class="nav nav-pills ">
                            <li class="nav-item">
                                <a class="nav-link active" href="#tab_1" data-toggle="tab">
                                    <i class="fas fa-bullhorn"></i>
                                    Przypisane kampanie
                                </a>
                            </li>                           
                        </ul>                        
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1">
                                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">                        
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="dataTable" class="table table-bordered table-striped dataTable dtr-inline">
                                                <thead>
                                                    <tr>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1"> 
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].IdCampaignNavigation.Name)
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1"> 
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].IdCampaignNavigation.IdContractorNavigation.Name)
                                                        </th>  
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].OkToEmailText)
                                                        </th>    
                                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">
                                                            @Html.DisplayNameFor(model => model.CustomerCampaigns.ToList()[0].OkToThirdPartyText)
                                                        </th> 
                                                        <th class="sorting col-md-3" id="actionColumn">
                                                            Akcje
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.CustomerCampaigns) {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdCampaignNavigation.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.IdCampaignNavigation.IdContractorNavigation.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.OkToEmailText)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.OkToThirdPartyText)
                                                            </td>
                                                           
                                                            <td class="text-center" id="actionColumn">                                                                                                                                   
                                                                <a asp-controller="Campaigns" asp-action="Details" asp-route-id="@item.IdCampaign" class="btn btn-primary btn-sm">
                                                                    <i class="fas fa-info-circle"></i>
                                                                    Szczegóły
                                                                </a>
                                                                <a asp-controller="CustomerCampaign" asp-action="Edit" asp-route-campid="@item.IdCampaign" asp-route-cmid="@item.IdCustomer" class="btn btn-info btn-sm">
                                                                    <i class="fas fa-pencil-alt"></i>
                                                                    Edytuj zgody
                                                                </a>
                                                                <a asp-controller="CustomerCampaign" asp-action="Delete" asp-route-campid="@item.IdCampaign" asp-route-cmid="@item.IdCustomer" class="btn btn-danger btn-sm">
                                                                    <i class="fas fa-user-minus"></i>
                                                                    Odłącz
                                                                </a>                                                                                                                       
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>              
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>