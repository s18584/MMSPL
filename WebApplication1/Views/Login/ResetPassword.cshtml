@model WebApplication1.Models.DTO.ResetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MMSPLv4</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">


</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="" class="h1"><b>MMS</b></a><a href="" class="h4">PL</a>
            </div>

            <div class="login-box">
                <div class="card">
                    <div class="card-body login-card-body">
                        <p class="login-box-msg">Zresetuj hasło!</p>
                        <form method="POST" asp-controller="Login" asp-action="ResetPassword">
                            
                            <div class="input-group mb-3">
                                <input asp-for="@Model.Email" class="form-control" placeholder="Podaj adres e-mail przypisany do konta" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>

                            </div>
                        <div class="input-group mb-3">
                            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Podaj nowe hasło"/>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                            <div class="input-group mb-3">
                                <input asp-for="@Model.RepeatedPassword" type="password" class="form-control" placeholder="Powtórz hasło"/>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                @Html.HiddenFor(m => m.ResetPasswordToken)
                            </div>
                        <div class="col-4">
                            
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <button type="submit" class="btn btn-primary btn-block">Zresetuj hasło</button>
                        </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <!-- jQuery -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>

</body>
</html>
